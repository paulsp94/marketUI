{
"rules":{
    ".read" : "root.child('admin').hasChild(auth.uid) == true",
    ".write" : "root.child('admin').hasChild(auth.uid) == true",
      
    "ProductCoreDetails":{
      ".indexOn": ["ProductId"],
      ".read" : "true", 
      "$ProductCoreDetails":{ 
                              ".write" : "auth != null && data.child('Userid').val() === auth.uid || !data.exists()",
                              "Public":{".write" : "true"
                                            },
                              "Private":{".write" : "auth != null"
                                            }
    }},
    "ProductOwnerDetails":{
           ".write": "auth != null && data.child('$Userid').val() == auth.uid || !data.exists()",
           ".read": "true"
    },
    "admin":{
          ".write": "false",
          ".read": "true"
    },
     "Description":{
      ".read" : "true",
      ".indexOn": ["ProductId"],
      "$Description": {
          ".write" : "auth != null && data.child('Userid').val() === auth.uid || !data.exists()"
      }
    },
    "Products_User_Comments":{
      ".read" : "true",
      ".write" : "auth != null",
      ".indexOn" : ["datenumber"]
    },
    "sales":{
      ".read" : "true",
      ".write" : "auth != null",
      ".indexOn": ["buyerId"]
    },
    "Product_creation":{
      ".read" : "true",
      ".write" : "auth != null",
      ".indexOn": ["userid"]
    },
    "Publishedproduct":{
      ".read" : "true",
      ".write" : "auth != null",
      ".indexOn": ["Productid"]
    },
    "Content":{
      ".read" : "true",
      ".indexOn": ["ProductId"],
        "$Content": {
            ".write" : "auth != null && data.child('Userid').val() === auth.uid || !data.exists()"
        }
    },
    "ProductSidebar":{
      ".read" : "true",
      ".indexOn": ["Productid"],
        "$ProductSidebar": {
            ".write" : "auth != null && data.child('Userid').val() === auth.uid || !data.exists()"
        }
    }
}
}