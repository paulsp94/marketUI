{
"rules":{
    ".read" : "root.child('admin').hasChild(auth.uid) == true",
    ".write" : "root.child('admin').hasChild(auth.uid) == true",
      
    "ProductCoreDetails":{
      ".indexOn": ["ProductId"],
      ".write" : "true",
      ".read" : "true",
      "$ProductCoreDetails":{ 
                              ".write" : "auth != null && data.child('Userid').val() === auth.uid",
                              "downloadCount":{".write" : "true",
                                               ".read" : "true"
                                            },
                              "ratedCount":{".write" : "auth != null",
                                              ".read" : "true"
                                            },
                              "rating":{      ".write" : "auth != null",
                                              ".read" : "true"
                                            }
    }},
    "ProductOwnerDetails":{
      "$uid":{
                ".write": "$uid === auth.uid",
                ".read": "true"
    }},
    "admin":{
          ".write": "false",
          ".read": "true"
    },
     "Description":{
      ".read" : "true",
      ".write" : "auth != null",
      ".indexOn": ["ProductId"]
    },
    "Products_User_Comments":{
      ".read" : "true",
      ".write" : "auth != null",
      ".indexOn": ["datenumber"]
    },
    "sales":{
      ".read" : "true",
      ".write" : "true",
      ".indexOn": ["buyerId"]
    },
    "Product_creation":{
      ".read" : "true",
      ".write" : "auth != null",
      ".indexOn": ["userid"]
    },
    "Publishedproduct":{
      ".read" : "true",
      ".write" : "auth != null",
      ".indexOn": ["Productid"]
    },
    "Content":{
      ".read" : "true",
      ".write" : "auth != null",
      ".indexOn": ["ProductId"]
    },
    "ProductSidebar":{
      ".read" : "true",
      ".write" : "auth != null",
      ".indexOn": ["Productid"]
    }
}
}